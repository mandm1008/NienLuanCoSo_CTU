<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<HBox alignment="CENTER_LEFT" minWidth="-Infinity" prefHeight="40.0" prefWidth="140.0" spacing="12.0" styleClass="music-box" stylesheets="@../css/music.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controllers.PlaylistMenuController">
  <children>
    <Label fx:id="title" maxWidth="1.7976931348623157E308" style="-fx-font-size: 10;" styleClass="music-title" text="Playlist Name" HBox.hgrow="ALWAYS" />
    <StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="32.0" prefWidth="32.0">
      <children>
        <Button fx:id="playButton" mnemonicParsing="false" styleClass="clear-button">
          <graphic>
            <ImageView fitHeight="12.0" fitWidth="12.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../images/play-solid.png" />
              </image>
            </ImageView>
          </graphic>
        </Button>
      </children>
    </StackPane>
  </children>
  <padding>
    <Insets bottom="4.0" left="12.0" right="12.0" top="4.0" />
  </padding>
</HBox>
